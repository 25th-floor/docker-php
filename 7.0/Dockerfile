# Beware: This file is generated by the generate.sh script!
FROM ubuntu:14.04
MAINTAINER Martin Prebio <mp@25th-floor.com>
EXPOSE 9000
ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update \
	&& apt-get dist-upgrade -y \
	&& apt-get install -y software-properties-common language-pack-en-base \
	&& LC_ALL=en_US.UTF-8 add-apt-repository ppa:ondrej/php-7.0 \
	&& apt-get update \
	&& apt-get install -y php7.0-fpm php7.0-sqlite php7.0-pgsql php7.0-mysql php7.0-mcrypt php7.0-intl php7.0-gd \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Prepare run directory
RUN mkdir /run/php

WORKDIR /var/www

COPY php-fpm.conf /etc/php/7.0/fpm/php-fpm.conf

CMD ["php-fpm7.0"]
