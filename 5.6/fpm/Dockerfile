# Beware: This file is generated by the generate.sh script!
FROM ubuntu:14.04
MAINTAINER Martin Prebio <mp@25th-floor.com>
EXPOSE 9000
ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update \
	&& apt-get dist-upgrade -y \
	&& apt-get install -y software-properties-common language-pack-en-base \
	&& LC_ALL=en_US.UTF-8 add-apt-repository ppa:ondrej/php5-5.6 \
	&& apt-get update \
	&& apt-get install -y php5-fpm php5-sqlite php5-pgsql php5-mysqlnd php5-mcrypt php5-intl php5-gd php5-curl \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Prepare run directory
RUN mkdir /run/php

WORKDIR /var/www

COPY php-fpm.conf /etc/php5/fpm/php-fpm.conf

CMD ["php5-fpm"]
